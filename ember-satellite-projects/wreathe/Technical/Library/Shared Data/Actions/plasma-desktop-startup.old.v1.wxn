#!/bin/bash

# Plasma startup script
# Version 1, 14 August 2012 (for Wreathe) (WXN template copied from cairo-dock-startup.wxn v1)

killall plasma-desktop;

cd ~/.kde/share/config;

rm -rf *plasma*;

plasma-desktop;

sleep 3;

killall plasma-desktop;

cp ~/Technical/Library/Settings/Wreathe/Templates/plasma-desktop-appletsrc_1 ~/.kde/share/config/plasma-desktop-appletsrc;

cp ~/Technical/Library/Settings/Wreathe/Templates/plasma-desktoprc_1 ~/.kde/share/config/plasma-desktoprc;

plasma-desktop;
